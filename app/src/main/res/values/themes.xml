<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiChauchitaWork" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MiChauchitaWork" parent="Base.Theme.MiChauchitaWork" >

        <item name="android:textColor">@color/azul</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="textTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="saludo">
        <item name="android:textColor">@color/plomo</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="login">
        <item name="android:textColor">@color/pastel</item>
        <item name="android:textSize">14sp</item>

    </style>



    <style name="busqueda">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="busqueda2">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="menu">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="SearchInput">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="ButtonsGeneral">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">22sp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="cornerRadius">8dp</item>
    </style>


    <style name="ButtonCancel" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/pastel</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonsGeneral">
        <item name="android:backgroundTint">#1877F1</item>
    </style>

    <style name="ButtonTwitter" parent="ButtonsGeneral">
        <item name="android:backgroundTint">#1da1f2</item>
    </style>

    <style name="ButtonRecuContra" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/fondo2</item>
        <item name="android:textColor">@color/plomo</item>

    </style>

    <style name="Registrese" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/fondo2</item>
        <item name="android:textColor">@color/pastel</item>


    </style>

    <style name="box">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/rojo_suave</item>
    </style>
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
    <item name="android:color">@color/azul</item>
    </style>

